}
/* 头部滚蛋菜单 */
.menus {
	white-space: nowrap;
	text-align: center;
}
.menus view {
	margin-right: 30rpx;
	width: auto;
	line-height: 88rpx;
	display: inline-block;
	text-align: center;
	font-size: 30rpx;
}
.menus view:first-child {
	margin-left: 30rpx;
}
.menus view:last-child {
	margin-right: 30rpx;
}
.menuActive {
	color: #f36e00;
}
.borderActive {
	width: 60rpx;
	height: 88rpx;
	border-bottom: 2rpx solid #f36e00 !important;
}
/* 文字相关 */
.center {
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	text-align: center;
}

